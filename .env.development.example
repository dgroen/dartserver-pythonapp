# Development Environment Configuration
# Use this as a template for your development deployment
# This configuration uses http://dev.letsplaydarts.eu

ENVIRONMENT=development
APP_DOMAIN=dev.letsplaydarts.eu
APP_SCHEME=http
FLASK_DEBUG=True
FLASK_USE_SSL=False
SESSION_COOKIE_SECURE=False

# RabbitMQ Configuration (Development)
# Can point to local, staging, or development server
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=darts_exchange
RABBITMQ_TOPIC=darts.scores.#

# Database Configuration (Development)
# Can use local or development database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dartsdb_dev

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=dev-secret-key-only-for-testing

# Dartboard Configuration
DARTBOARD_SENDS_ACTUAL_SCORE=True

# Text-to-Speech Configuration
TTS_ENABLED=true
TTS_ENGINE=gtts
TTS_SPEED=150
TTS_VOLUME=0.9
TTS_VOICE=default

# WSO2 Identity Server Configuration (Development)
# Can point to development WSO2 instance
WSO2_IS_URL=https://dev-wso2.example.com:9443
# For Docker environments, use:
#WSO2_IS_INTERNAL_URL=https://wso2is:9443
WSO2_CLIENT_ID=dev_client_id
WSO2_CLIENT_SECRET=dev_client_secret
WSO2_IS_VERIFY_SSL=False
JWT_VALIDATION_MODE=introspection
WSO2_IS_INTROSPECT_USER=admin
WSO2_IS_INTROSPECT_PASSWORD=admin

# Authentication
# Set to 'true' to skip authentication for testing (not recommended)
AUTH_DISABLED=False

# Swagger API Documentation
SWAGGER_HOST=dev.letsplaydarts.eu