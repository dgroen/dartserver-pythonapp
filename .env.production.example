# Production Environment Configuration
# Use this as a template for your production deployment

ENVIRONMENT=production
APP_DOMAIN=letsplaydarts.eu
APP_SCHEME=https
FLASK_DEBUG=False
FLASK_USE_SSL=True

# RabbitMQ Configuration (Production)
RABBITMQ_HOST=rabbitmq.production.example.com
RABBITMQ_PORT=5672
RABBITMQ_USER=<production_rabbitmq_user>
RABBITMQ_PASSWORD=<production_rabbitmq_password>
RABBITMQ_VHOST=/darts
RABBITMQ_EXCHANGE=darts_exchange_prod
RABBITMQ_TOPIC=darts.scores.#

# Database Configuration (Production)
DATABASE_URL=postgresql://<db_user>:<db_password>@db.production.example.com:5432/dartsdb_prod

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=<your_very_secure_production_secret_key_change_this>

# Dartboard Configuration
DARTBOARD_SENDS_ACTUAL_SCORE=True

# Text-to-Speech Configuration
TTS_ENABLED=true
TTS_ENGINE=gtts
TTS_SPEED=150
TTS_VOLUME=0.9
TTS_VOICE=default

# WSO2 Identity Server Configuration (Production)
WSO2_IS_URL=https://letsplaydarts.eu/auth
# Leave WSO2_IS_INTERNAL_URL empty to use WSO2_IS_URL
#WSO2_IS_INTERNAL_URL=
WSO2_CLIENT_ID=<your_production_client_id>
WSO2_CLIENT_SECRET=<your_production_client_secret>
WSO2_IS_VERIFY_SSL=True
JWT_VALIDATION_MODE=introspection
WSO2_IS_INTROSPECT_USER=<production_introspect_user>
WSO2_IS_INTROSPECT_PASSWORD=<production_introspect_password>

# Session & Security (Production)
SESSION_COOKIE_SECURE=True

# Authentication
AUTH_DISABLED=False

# Swagger API Documentation
SWAGGER_HOST=letsplaydarts.eu
