# Environment Configuration
# Options: production, development, staging
ENVIRONMENT=production
# Domain: e.g., letsplaydarts.eu (production), dev.letsplaydarts.eu (development), localhost:5000 (local)
APP_DOMAIN=letsplaydarts.eu
# Scheme: https (production), http (development/local)
APP_SCHEME=https

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=darts_exchange
RABBITMQ_TOPIC=darts.scores.#

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False
FLASK_USE_SSL=True
SECRET_KEY=your-secret-key-here

# Dartboard Configuration
DARTBOARD_SENDS_ACTUAL_SCORE=True

# Text-to-Speech Configuration
TTS_ENABLED=true
TTS_ENGINE=gtts
# Use 'gtts' for client-side browser playback, 'pyttsx3' for server-side playback
TTS_SPEED=150
TTS_VOLUME=0.9
TTS_VOICE=default

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dartsdb

# WSO2 Authentication Configuration
# WSO2_IS_URL: Public URL for browser redirects (what users see in their browser)
WSO2_IS_URL=https://letsplaydarts.eu/auth
# WSO2_IS_INTERNAL_URL: Internal URL for backend API calls (leave empty to use WSO2_IS_URL)
# If running in Docker, set this to https://wso2is:9443
# If running locally without Docker, leave it commented out
#WSO2_IS_INTERNAL_URL=https://wso2is:9443
WSO2_CLIENT_ID=gKL8KC2FkWIz2r3553vraJ8pf8Ma
WSO2_CLIENT_SECRET=c1nJheSbpiBxsQPKvdm_FLU3rssa
# Note: Redirect URIs are now auto-generated from APP_DOMAIN and APP_SCHEME
# The app will use dynamic redirect URIs based on request headers and config
WSO2_IS_VERIFY_SSL=False
JWT_VALIDATION_MODE=introspection
WSO2_IS_INTROSPECT_USER=admin
WSO2_IS_INTROSPECT_PASSWORD=admin

AUTH_DISABLED=False
