# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=darts_exchange
RABBITMQ_TOPIC=darts.scores.#

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# WSO2 Identity Server Configuration
WSO2_IS_URL=https://localhost:9443
WSO2_CLIENT_ID=your_client_id_here
WSO2_CLIENT_SECRET=your_client_secret_here
WSO2_REDIRECT_URI=http://localhost:5000/callback
JWT_VALIDATION_MODE=introspection
WSO2_IS_INTROSPECT_USER=admin
WSO2_IS_INTROSPECT_PASSWORD=admin
SESSION_COOKIE_SECURE=False

# Text-to-Speech Configuration
TTS_ENABLED=true
TTS_ENGINE=gtts
TTS_VOICE=default
TTS_SPEED=150
TTS_VOLUME=1.0
# Note: For client-side playback, use TTS_ENGINE=gtts
# For server-side playback, use TTS_ENGINE=pyttsx3
