# ===== ENVIRONMENT CONFIGURATION =====
# Change these settings to switch between production and development environments
# For more details, see docs/MULTI_ENVIRONMENT_SETUP.md

# Environment: production, development, or staging
# Use 'production' for https://letsplaydarts.eu
# Use 'development' for http://dev.letsplaydarts.eu
ENVIRONMENT=production

# Application domain (without scheme)
# Production example: letsplaydarts.eu
# Development example: dev.letsplaydarts.eu
# Local example: localhost:5000
APP_DOMAIN=localhost:5000

# URL Scheme: https or http
# Use https for production
# Use http for local development
APP_SCHEME=https

# Derived URLs (automatically generated from above):
# - APP_URL = https://letsplaydarts.eu (or http://dev.letsplaydarts.eu)
# - Callback URL = https://letsplaydarts.eu/callback
# - Logout URL = https://letsplaydarts.eu/
# These are used for OAuth2 redirect URIs (no need to set manually)

# ===== RABBITMQ CONFIGURATION =====
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=darts_exchange
RABBITMQ_TOPIC=darts.scores.#

# ===== FLASK CONFIGURATION =====
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here

# ===== WSO2 IDENTITY SERVER CONFIGURATION =====
# WSO2_IS_URL: Public URL for browser redirects (authorize, logout)
WSO2_IS_URL=https://localhost:9443

# WSO2_IS_INTERNAL_URL: Internal URL for backend API calls
# Leave empty to use WSO2_IS_URL. Set this for Docker environments:
# If running in Docker: https://wso2is:9443
# If running locally: leave commented
#WSO2_IS_INTERNAL_URL=https://wso2is:9443

# OAuth2 Client Configuration
WSO2_CLIENT_ID=your_client_id_here
WSO2_CLIENT_SECRET=your_client_secret_here

# JWT Validation: introspection or jwks
JWT_VALIDATION_MODE=introspection

# Introspection credentials
WSO2_IS_INTROSPECT_USER=admin
WSO2_IS_INTROSPECT_PASSWORD=admin

# SSL verification (set to False for self-signed certificates)
WSO2_IS_VERIFY_SSL=False

# Authentication Configuration
# Set to 'true' to disable all authentication and role checks (useful for development/testing)
# When enabled, all users will have admin privileges
AUTH_DISABLED=False

# Text-to-Speech Configuration
TTS_ENABLED=true
TTS_ENGINE=gtts
TTS_VOICE=default
TTS_SPEED=150
TTS_VOLUME=1.0
# Note: For client-side playback, use TTS_ENGINE=gtts
# For server-side playback, use TTS_ENGINE=pyttsx3
