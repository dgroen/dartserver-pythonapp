# Localhost HTTPS Configuration
# Use this for secure local development with SSL
# Access at: https://localhost:5000
# Note: You'll need to accept self-signed certificate warnings in your browser

ENVIRONMENT=development
APP_DOMAIN=localhost:5000
APP_SCHEME=https
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True
FLASK_USE_SSL=True
SECRET_KEY=local-dev-secret-key

# Session Configuration for HTTPS
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_SAMESITE=Lax

# RabbitMQ Configuration (Local)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=darts_exchange
RABBITMQ_TOPIC=darts.scores.#

# Database Configuration (Local)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dartsdb

# Dartboard Configuration
DARTBOARD_SENDS_ACTUAL_SCORE=True

# Text-to-Speech Configuration
TTS_ENABLED=true
TTS_ENGINE=gtts
TTS_SPEED=150
TTS_VOLUME=0.9
TTS_VOICE=default

# WSO2 Identity Server Configuration (Local)
WSO2_IS_URL=https://localhost:9443
WSO2_IS_INTERNAL_URL=https://localhost:9443
WSO2_CLIENT_ID=local_client_id
WSO2_CLIENT_SECRET=local_client_secret
WSO2_IS_VERIFY_SSL=False
JWT_VALIDATION_MODE=introspection
WSO2_IS_INTROSPECT_USER=admin
WSO2_IS_INTROSPECT_PASSWORD=admin
WSO2_REDIRECT_URI=https://localhost:5000/callback
WSO2_POST_LOGOUT_REDIRECT_URI=https://localhost:5000/

# Authentication
AUTH_DISABLED=False

# Swagger API Documentation
SWAGGER_HOST=localhost:5000
